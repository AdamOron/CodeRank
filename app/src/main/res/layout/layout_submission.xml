<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="end"
    >

    <RatingBar
            android:id="@+id/rbSubmissionAvgRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_marginBottom="10dp"
            android:theme="@style/GreyRatingBar"
            android:isIndicator="true"
            android:numStars="5"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/submission_header"
            />

        <com.example.coderank.user.UserPreview
            android:id="@+id/upSubAuthor"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tvSubLang"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java"
            android:textColor="#C5C5C5"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:textSize="20sp"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/tvSubContent"
        android:fontFamily="@font/roboto_mono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submission_body"
        android:textColor="@color/text"
        android:padding="15dp"
        android:textSize="18sp"
        />

</LinearLayout>