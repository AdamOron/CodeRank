<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/background"
        tools:context=".challenge.fragments.ChallengeOverviewFragment">

    <TextView
            android:id="@+id/tvChallengeTitle"

            android:background="@drawable/rounded_edit_text"
            android:layout_width="380dp"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-black"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="Challenge Title"

            android:paddingVertical="7dp"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            />

    <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <com.example.coderanknew.user.UserPreview
                android:layout_alignParentLeft="true"
                android:id="@+id/upChallengeAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/tvChallengeSubCount"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="#A3A3A3"
                android:text="5k"

                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                />

    </RelativeLayout>

    <View
            android:layout_width="380dp"
            android:layout_height="0.5dp"
            android:background="#AA7E7E7E"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            />
    
    <TextView
            android:id="@+id/tvTopicContent"

            android:background="@drawable/rounded_edit_text"
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:padding="15dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Challenge Content"
            />

    <View
            android:layout_width="380dp"
            android:layout_height="0.5dp"
            android:background="#AA7E7E7E"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

        <EditText
                android:id="@+id/etComment"

                android:background="@drawable/rounded_edit_text"
                android:layout_width="280dp"
                android:layout_height="wrap_content"

                android:padding="15dp"
                android:textColor="@color/text"
                android:textColorHint="@color/hint"
                android:hint="Comment Content"

                android:layout_marginEnd="10dp"
                />

        <TextView
                android:id="@+id/bSubmitComment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:text=">"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

    </LinearLayout>

    <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/lvComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/comment_list"
            android:divider="#AA7E7E7E"
            android:dividerHeight="0.5dp"
            android:paddingHorizontal="20dp"
            />
    <!--            android:divider="@android:color/transparent"-->
    <!--            android:dividerHeight="25dp"-->
    <!--            />-->

</LinearLayout>