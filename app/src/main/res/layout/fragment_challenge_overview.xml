<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/background"
        tools:context=".challenge.fragments.overview.ChallengeOverviewFragment">

    <RelativeLayout
            android:paddingTop="150dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <com.example.coderanknew.user.UserPreview
                android:layout_alignParentLeft="true"
                android:id="@+id/upChallengeAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTopicSubmissions"
                android:text="5k"
                android:textSize="20sp"
                android:textColor="#A3A3A3"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                />

    </RelativeLayout>

    <TextView
            android:id="@+id/tvTopicContent"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="Topic Content"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginBottom="50dp"
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

        <EditText
                android:id="@+id/etComment"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edit_text"
                android:hint="Comment"
                android:textColor="@color/text"
                android:gravity="center"
                android:layout_marginRight="10dp"
                />

        <TextView
                android:id="@+id/bSubmitComment"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:text=">"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

    </LinearLayout>

    <ListView
            android:id="@+id/lvComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/comment_list"
            android:divider="#AA7E7E7E"
            android:dividerHeight="0.5dp"
            android:padding="20dp"
            />
    <!--            android:divider="@android:color/transparent"-->
    <!--            android:dividerHeight="25dp"-->
    <!--            />-->

</LinearLayout>