<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".post.challenge.activities.ChallengeViewActivity"
        android:background="@color/background"
        >

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tlChallengeTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#292929"
            app:tabIconTint="@color/light_blue_400"
            app:tabIndicatorColor="@color/light_blue_600"
            app:tabSelectedTextColor="@color/text"
            app:tabTextColor="@color/black"
            />
    
    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/challengeViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>