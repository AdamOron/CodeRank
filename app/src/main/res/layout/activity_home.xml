<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".entry.home.HomeActivity"
        android:background="@color/background"
        >

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tlHomeTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#292929"
            app:tabIconTint="@color/light_blue_400"
            app:tabIndicatorColor="@color/white"
            app:tabSelectedTextColor="@color/text"
            app:tabTextColor="@color/gray_400"
            />

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpHome"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            />

    <TextView
            android:id="@+id/bCreateChallenge"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Create Challenge"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            />

</LinearLayout>