<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".HomeActivity"
        android:background="@color/background"
        >

    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Search"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="100dp"
            />

    <TextView
            android:id="@+id/tvTrendingTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:text="Trending Topics"
            android:layout_marginBottom="10dp"
            />

    <Button
            android:id="@+id/bTrending1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#ffc000"
            android:text="Trending Topic 1"
            />

    <Button
            android:id="@+id/bTrending2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#ff0198"
            android:text="Trending Topic 2"
            />

    <Button
            android:id="@+id/bTrending3"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#00b0f0"
            android:text="Trending Topic 3"
            />

    <Button
            android:id="@+id/bTrending4"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#92d050"
            android:text="Trending Topic 4"
            android:layout_marginBottom="20dp"
            />

    <TextView
            android:id="@+id/bCreateChallenge"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Create Challenge"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            />

</LinearLayout>